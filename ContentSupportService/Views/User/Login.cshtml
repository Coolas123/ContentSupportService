@using Application.Users.Queries.LoginUser
@model LoginUserQuery

<div class="container">
    <div class="row justify-content-center">
        <div class="col-4 text-left">
            <h3>Авторизация</h3>
            <form asp-action="Login" method="post"  class="mw-50 mx-auto">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" placeholder="Введите логин" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" placeholder="Введите пароль" />
                </div>
                <button type="submit" class="btn btn-success">Войти</button>
            </form>
        </div>
    </div>
</div>
